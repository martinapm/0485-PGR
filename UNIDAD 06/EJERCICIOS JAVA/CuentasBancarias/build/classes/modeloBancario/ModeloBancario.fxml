<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="modeloBancario.ModeloBancarioController">

    <children>
        <TabPane layoutX="0" layoutY="0" prefHeight="600" prefWidth="800">
            <tabs>
                <!-- Pestaña Clientes -->
                <Tab text="Clientes">
                    <content>
                        <AnchorPane minHeight="0" minWidth="0" prefHeight="580" prefWidth="800">
                            <children>
                                <Label layoutX="20" layoutY="20" text="Gestión de Clientes" style="-fx-font-weight: bold;"/>

                                <TextField fx:id="txtIdCliente" layoutX="20" layoutY="50" promptText="ID Cliente" prefWidth="200"/>
                                <TextField fx:id="txtNombre" layoutX="20" layoutY="90" promptText="Nombre" prefWidth="200"/>
                                <TextField fx:id="txtDireccion" layoutX="20" layoutY="130" promptText="Dirección" prefWidth="200"/>
                                <TextField fx:id="txtTelefono" layoutX="20" layoutY="170" promptText="Teléfono" prefWidth="200"/>

                                <Button layoutX="20" layoutY="210" mnemonicParsing="false" onAction="#crearCliente" text="Crear Cliente" prefWidth="200"/>

                                <ListView fx:id="listaClientes" layoutX="250" layoutY="50" prefHeight="300" prefWidth="500">
                                    <placeholder>
                                        <Label text="No hay clientes registrados"/>
                                    </placeholder>
                                </ListView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- Pestaña Cuentas -->
                <Tab text="Cuentas">
                    <content>
                        <AnchorPane minHeight="0" minWidth="0" prefHeight="580" prefWidth="800">
                            <children>
                                <Label layoutX="20" layoutY="20" text="Gestión de Cuentas" style="-fx-font-weight: bold;"/>

                                <ComboBox fx:id="cmbTipoCuenta" layoutX="20" layoutY="50" prefWidth="200"/>
                                <TextField fx:id="txtNumCuenta" layoutX="20" layoutY="90" promptText="Número de Cuenta" prefWidth="200"/>
                                <TextField fx:id="txtSaldoInicial" layoutX="20" layoutY="130" promptText="Saldo Inicial" prefWidth="200"/>

                                <Button layoutX="20" layoutY="170" mnemonicParsing="false" onAction="#crearCuenta" text="Crear Cuenta" prefWidth="200"/>

                                <ListView fx:id="listaCuentas" layoutX="250" layoutY="50" prefHeight="300" prefWidth="500">
                                    <placeholder>
                                        <Label text="No hay cuentas registradas"/>
                                    </placeholder>
                                </ListView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- Pestaña Operaciones -->
                <Tab text="Operaciones">
                    <content>
                        <AnchorPane minHeight="0" minWidth="0" prefHeight="580" prefWidth="800">
                            <children>
                                <Label layoutX="20" layoutY="20" text="Operaciones Bancarias" style="-fx-font-weight: bold;"/>

                                <ComboBox fx:id="cmbOperacion" layoutX="20" layoutY="50" prefWidth="200"/>
                                <TextField fx:id="txtCantidad" layoutX="20" layoutY="90" promptText="Cantidad" prefWidth="200"/>
                                <TextField fx:id="txtCuentaDestino" layoutX="20" layoutY="130" promptText="N° Cuenta Destino" prefWidth="200" visible="false"/>

                                <Button layoutX="20" layoutY="170" mnemonicParsing="false" onAction="#realizarOperacion" text="Ejecutar" prefWidth="200"/>

                                <TextArea fx:id="txtHistorial" layoutX="250" layoutY="50" prefHeight="300" prefWidth="500"
                                          editable="false" style="-fx-font-family: monospace; -fx-font-size: 12px;"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>